<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme. -->
    <style name="Theme.RoutinePlanner" parent="Theme.MaterialComponents.DayNight.DarkActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/purple_500</item>
        <item name="colorPrimaryVariant">@color/purple_700</item>
        <item name="colorOnPrimary">@color/application_background</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/status_bar</item>
        <item name="colorSecondaryVariant">@color/teal_700</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/status_bar</item>
        <!-- Customize your theme here. -->
        <item name="toolbarStyle">@style/ToolBarStyle</item>
        <item name="android:alertDialogTheme">@style/AlertDialogTheme</item>
    </style>

    <style name="Theme.RoutinePlanner.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.RoutinePlanner.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar">
    </style>

    <style name="Theme.RoutinePlanner.PopupOverlay" parent="ThemeOverlay.AppCompat.DayNight">
        <item name="android:textColor">@color/text</item>
        <item name="popupMenuBackground">@color/tool_bar_title</item>
    </style>

    <style name="AlertDialogTheme" parent="ThemeOverlay.AppCompat.Dialog.Alert">

        <item name="android:textColorHint">@color/hint</item>
        <item name="android:windowBackground">@color/application_background</item>

        <item name="android:buttonBarNegativeButtonStyle">@style/NegativeButtonStyle</item>
        <item name="android:buttonBarPositiveButtonStyle">@style/PositiveButtonStyle</item>
        <item name="android:buttonBarNeutralButtonStyle">@style/PositiveButtonStyle</item>

    </style>

    <style name="NegativeButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dialog_negative_btn</item>
    </style>

    <style name="PositiveButtonStyle" parent="Widget.AppCompat.Button.ButtonBar.AlertDialog">
        <item name="android:textColor">@color/dialog_positive_btn</item>
    </style>

    <style name="ToolBarStyle" parent="Widget.MaterialComponents.Toolbar.Primary">
        <item name="android:background">@color/tool_bar_background</item>
        <item name="titleTextColor">@color/tool_bar_title</item>
        <item name="subtitleTextColor">@color/tool_bar_title</item>
        <item name="popupTheme">@style/Theme.RoutinePlanner.PopupOverlay</item>
    </style>

    <style name="TextInputLayoutAppearance" parent="Widget.Design.TextInputLayout">
        <item name="colorPrimary">@color/tool_bar_background</item>
    </style>

    <style name="ToolbarMenuStyle" parent="ThemeOverlay.AppCompat.Light">
        <item name="android:colorBackground">@color/tool_bar_background</item>
        <item name="android:textColor">@color/tool_bar_title</item>
    </style>

</resources>