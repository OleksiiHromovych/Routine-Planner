<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="item"
            type="android.hromovych.com.routineplanner.data.embedded.DailyDoingFull" />

        <variable
            name="itemData"
            type="android.hromovych.com.routineplanner.presentation.basic.BasicAdapterModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:onClick="@{(view) -> itemData.clickListener.onClick(view, item)}"
        android:padding="5dp">

        <CheckBox
            android:id="@+id/doing_checkbox"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:checked="@{item.dailyDoing.completed}"
            android:onClick="@{() -> itemData.checkBoxClickListener.onClick(item, !item.dailyDoing.completed)}"
            android:visibility="@{itemData.checkBoxActive ? View.VISIBLE : View.GONE}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/doing_title"
            android:layout_width="0dp"
            android:layout_height="match_parent"
            android:layout_marginStart="5dp"
            android:text="@{item.doing.title}"
            android:textColor="@color/text"
            android:textSize="24sp"
            app:strike="@{item.dailyDoing.completed}"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toStartOf="@id/doing_move_image_view"
            app:layout_constraintStart_toEndOf="@id/doing_checkbox"
            app:layout_constraintTop_toTopOf="parent"
            tools:text="Title" />

        <ImageView
            android:id="@+id/doing_move_image_view"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginEnd="5dp"
            android:src="@drawable/ic_move_icon"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:onTouch="@{itemData.touchListener}" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>